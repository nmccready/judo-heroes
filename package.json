{
  "name": "react-server-boilerplate",
  "version": "1.0.0",
  "description": "Simple application to showcase how to achieve universal rendering and routing with React and Express.",
  "main": "src/server.js",
  "repository": "git@github.com:lmammino/react-server-boilerplate.git",
  "scripts": {
    "start": "cross-env babel-node --presets react,es2015 src/server.js",
    "start:nodemon": "cross-env nodemon ./src/server.js --exec babel-node --presets react,es2015",
    "start:prod": "cross-env NODE_ENV=production babel-node --presets react,es2015 src/server.js",
    "build:prod": "cross-env NODE_ENV=production webpack -p",
    "build": "cross-env webpack -p",
    "build:start": "npm run build && npm run start:nodemon",
    "build:start:prod": "npm run build:prod && npm run start:prod",
    "start-dev": "npm run start-dev-hmr",
    "start-dev-single-page": "http-server src/static",
    "start-dev-hmr": "webpack-dev-server --progress --inline --hot --open"
  },
  "author": "Luciano Mammino",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "cross-env": "^3.1.4",
    "ejs": "^2.5.1",
    "express": "^4.14.0",
    "lodash": "^4.17.4",
    "nodemon": "1.X",
    "react": "0.14",
    "react-dom": "0.14",
    "react-router": "^2.6.1"
  },
  "devDependencies": {
    "http-server": "^0.9.0",
    "react-hot-loader": "^1.3.0",
    "react-lazy-load": "^3.0.11",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.14.1"
  }
}
